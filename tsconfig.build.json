{
  "compilerOptions": {
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "target": "es5",
    "module": "esnext",
    "outDir": "./lib",
    "strict": true,
    "declaration": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "jsx": "react",
    "lib": ["es7", "dom"],
  },
  "exclude": ["node_modules", "lib"]
}
